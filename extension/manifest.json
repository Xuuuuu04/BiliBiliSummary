{
  "manifest_version": 3,
  "name": "BiliBili Summarize AI",
  "version": "1.0.0",
  "description": "AI驱动的B站视频智能分析助手 - 深度总结视频内容、挖掘弹幕评论、多模态理解",
  "author": "BiliBiliSummarize",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "cookies",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.bilibili.com/*",
    "http://localhost:5000/*",
    "https://*.siliconflow.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/video/*",
        "https://www.bilibili.com/read/*",
        "https://www.bilibili.com/opus/*",
        "https://space.bilibili.com/*"
      ],
      "js": [
        "protobuf.min.js",
        "bilibili-api.js",
        "video-processor.js",
        "ai-service.js",
        "ui-components.js",
        "content-script.js"
      ],
      "css": ["content-style.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BiliBili Summarize AI"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "content-style.css"],
      "matches": ["https://*.bilibili.com/*"]
    }
  ]
}
